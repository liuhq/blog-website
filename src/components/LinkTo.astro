---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
    staticLink?: boolean;
    bold?: boolean;
}

const { staticLink = false, bold = false, target = '_self', ...attrs } = Astro.props as Props;
---

<a
    class:list={[{ 'static-link-to': staticLink }, { 'link-to': !staticLink }, { bold: !staticLink && bold }]}
    target={target}
    {...attrs}
>
    <slot />
</a>
